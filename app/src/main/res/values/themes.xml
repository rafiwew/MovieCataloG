<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieAppCleanArchitecture" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_black</item>
    </style>

    <style name="Theme.MovieAppCleanArchitecture.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieAppCleanArchitecture" parent="Base.Theme.MovieAppCleanArchitecture" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/red</item>
    </style>

</resources>